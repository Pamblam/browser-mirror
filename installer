#!/usr/bin/env bash

HERE=$(pwd)
npm init -y
npm install browser-mirror
mv ./node_modules/browser-mirror/bm-server ./bm-server
chmod +x bm-server

if [ -f /etc/profile ]; then
	printf '%s\n%s\n' '' "$(cat /etc/profile)" >/etc/profile
	printf '%s%s%s\n%s\n' 'export PATH="$PATH:' $HERE '"' "$(cat /etc/profile)" >/etc/profile
	printf '%s\n%s\n' '# Add bm-server to $PATH' "$(cat /etc/profile)" >/etc/profile
	printf '%s\n%s\n' '' "$(cat /etc/profile)" >/etc/profile
    source /etc/profile
fi

if [ -f /etc/paths ]; then
	printf '%s\n%s\n' '' "$(cat /etc/paths)" >/etc/paths
	printf '%s%s%s\n%s\n' 'export PATH="$PATH:' $HERE '"' "$(cat /etc/paths)" >/etc/paths
	printf '%s\n%s\n' '# Add bm-server to $PATH' "$(cat /etc/paths)" >/etc/paths
	printf '%s\n%s\n' '' "$(cat /etc/paths)" >/etc/paths
    source /etc/paths
fi

touch logs.txt && chmod 777 logs.txt

# testing...
# curl -L https://raw.githubusercontent.com/Pamblam/browser-mirror/dynamically-created-elements/installer | bash

# source /dev/stdin <<< "$(curl https://raw.githubusercontent.com/Pamblam/browser-mirror/dynamically-created-elements/installer)"; echo done
